<section class="py-16">
  <div class="client container mx-auto xl:w-1/2">
    <div id="addClient" class="mt-4">
      <button
        class="btn-primary modal-open rounded-full mb-4 text-white font-bold"
        id="addClientBtn"
        name="addClientBtn"
        type="button"
      >
        + Adicionar Cliente
      </button>
    </div>
    <form
      action="/admin/clients"
      method="POST"
      class=""
      name="clientForm"
      id="clientForm"
    >
      <div class="firstline">
        <div class="form-control">
          <label for="searchUserName">Nome:</label>
          <input
            type="text"
            name="searchUserName"
            id="searchUserName"
            placeholder="Nome do Cliente"
            class="border pl-6 mr-10 px-4 py-2 border-gray-400 rounded-md"
          />
        </div>
        <div class="form-control">
          <label for="searchUserPhone">Telefone:</label>
          <input
            type="text"
            name="searchUserPhone"
            id="searchUserPhone"
            value=""
            class="border pl-6 px-4 py-2 border-gray-400 rounded-md"
            placeholder="Telefone"
          />
        </div>
      </div>

      <div class="fourthline">
        <div class="form-control">
          <label for="searchUserdistrict">Bairro:</label>
          <input
            id="searchUserDistrict"
            name="searchUserdistrict"
            value=""
            class="border pl-6 px-4 py-2 border-gray-400 rounded-md"
            type="text"
            placeholder="Bairro"
          />
        </div>
        <div class="form-control">
          <label for="searchUsercity">Cidade:</label>
          <input
            id="searchUsercity"
            name="searchUsercity"
            value=""
            class="border pl-6 px-4 py-2 border-gray-400 rounded-md"
            type="text"
            placeholder="Cidade"
          />
        </div>
        <div class="form-control">
          <label for="searchUserstate">Estado:</label>
          <input
            id="searchUserstate"
            name="searchUserstate"
            value=""
            class="border pl-6 px-4 py-2 border-gray-400 rounded-md"
            type="text"
            placeholder="Estado"
          />
        </div>
      </div>

      <div id="clientSearch-btn" class="mt-4">
        <button
          class="btn-primary rounded-full mb-4 text-white font-bold"
          id="searchUserBtn"
          name="searchUserBtn"
          type="button"
        >
          Buscar Cliente
        </button>
      </div>
    </form>
    <table class="table userstable">
      <thead>
        <tr>
          <th class="px-4 py-2 text-left">Nome</th>
          <th class="px-4 py-2 text-left">Endere√ßo</th>
          <th class="px-4 py-2 text-left">Telefone</th>
        </tr>
      </thead>
      <tbody id="userTableBody"></tbody>
    </table>
  </div>
</section>

<div
  class="
    modal
    opacity-0
    pointer-events-none
    fixed
    w-full
    h-full
    top-0
    left-0
    flex
    items-center
    justify-center
  "
>
  <div
    class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"
  ></div>

  <div
    class="
      modal-container
      w-full
      h-full
      mx-auto
      my-auto
      xl:w-1/2
      xl:h-1/2
      bg-white
      rounded
      shadow-lg
      z-50
      overflow-y-auto
    "
  >
    <!-- Add margin if you want to see some of the overlay behind the modal-->
    <div class="modal-content w-full h-full py-4 text-left px-6">
      <!--Title-->

      <!--Body-->

      <iframe
        src="clients/updateUser"
        scrolling="no"
        class="w-full h-full"
      ></iframe>

      <!--Footer-->
      <div class="flex justify-end pt-2"></div>
    </div>
  </div>
</div>

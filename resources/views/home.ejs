<section class="hero py-16">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2">
      <h6 class="text-lg"><em>Sua Feira sem sair de casa.</em></h6>
      <h1 class="text-6xl font-bold">Tá esperando o quê?</h1>
      <button
        class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"
      >
        Peça Agora
      </button>
    </div>
    <div class="w-1/3"><img src="/img/logo-green-food.png" alt="" /></div>
  </div>
</section>
<section id="container" class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8">
    Todos os Itens <% categories.forEach(function (category){%>
    <button
      id="<%= category %>"
      type="button"
      class="categories size py-1 px-4 rounded-full uppercase text-xs"
    >
      <%= category %>
    </button>
    <% })%>
  </h1>
  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16"
  >
    <% products.forEach(function (product){%>
    <div class="w-full md:w-64">
      <img class="h-40 mb-4 mx-auto" src="/img/<%= product.image %>" alt="" />
      <div class="text-center">
        <h2 class="mb-4 text-lg"><%= product.name %></h2>
        <% product.sizes.forEach(function (size){%>
        <button
          type="button"
          data-product="<%= JSON.stringify(product)
              %>"
          id="<%= size %>"
          class="size py-1 px-4 rounded-full uppercase text-xs"
        >
          <%= size %>
        </button>
        <% })%>
        <div class="flex flex-col tems-center justify-around mt-1">
          <span class="font-bold text-lg">R$ <%= product.price %></span>
          <button
            data-product="<%= JSON.stringify(product)%>"
            class="add-to-cart py-1 px-6 rounded-full mx-8 my-4 font-bold"
            id="<%= product.id %>"
          >
            <span>+</span>
            <span class="m-4">Adicionar</span>
          </button>
        </div>
      </div>
    </div>
    <% })%>
  </div>
</section>
